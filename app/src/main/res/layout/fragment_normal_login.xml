<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.hotel.login.LoginActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="355dp"
            android:layout_height="330dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/villa_de_kestrel_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_txt_username"
            android:fontFamily="@font/bodoniflf_roman"
            android:hint="Username"
            android:paddingLeft="60dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textSize="40px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_txt_password"
            android:fontFamily="@font/bodoniflf_roman"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="60dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textSize="40px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText" />


        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:fontFamily="@font/bodoniflf_roman"
            android:text="Sign in"
            android:textColor="@color/colorText"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText2"
            app:layout_constraintVertical_bias="0.385" />

        <ImageButton
            android:id="@+id/btSignIn"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginEnd="140dp"
            android:background="@drawable/bg_btn_login"
            app:layout_constraintBottom_toBottomOf="@+id/tvSignIn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvSignIn"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>